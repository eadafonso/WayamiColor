body 
    margin 0
    padding 0
    box-sizing border-box
    background-color #fafafa

.box-color
    position absolute
    // width 40%
    top 20px
    border-radius 10px
    right 10px
    padding 6px
    background-color white
    border 1px solid #ddd
    >a   
        width 30px
        height 30px
        text-indent -9999
        float left
        font-size 0px
        margin 5px
        border-radius 50%

